<UserControl x:Class="VkUsersSearch.Views.Questions.Question1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:MVVMAqua.Converters;assembly=MVVMAqua"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >

	<UserControl.Resources>
		<converters:BooleanToVisibilityCollapsedConverter x:Key="BoolToVisibilityCollapsedConverter"/>
	</UserControl.Resources>

	<Grid Background="#EDEEF0">
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Rectangle Grid.Row="0" 
				   Grid.ColumnSpan="3" 
				   Fill="#FF4A76C9">
		</Rectangle>

		<StackPanel Grid.Row="0" 
					Grid.ColumnSpan ="3" 
					Orientation="Horizontal">

			<Label Content="Первый вопрос"
				   Foreground="White"
				   FontFamily="Rototo"
				   FontSize="16"
				   HorizontalAlignment="Stretch"
				   VerticalAlignment="Center"
				   HorizontalContentAlignment="Stretch"
				   VerticalContentAlignment="Center"/>
		</StackPanel>

		<Border BorderBrush="#4A76C9"
				Grid.Row="1"
				Grid.ColumnSpan="3"
                BorderThickness="1"
                CornerRadius="3"
				Background="White"
				VerticalAlignment="Center"
				HorizontalAlignment="Center">

			<Border.Effect>
				<DropShadowEffect BlurRadius="5"
                                  Color="#4A76C9"
								  ShadowDepth="0"/>
			</Border.Effect>

			<StackPanel Margin="5">
				<TextBlock Text="Какой жанр Вам нравится больше?" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="5"/>
				<Button Content="Фантастика" Command="{Binding NavigateTo21Command}" Style="{StaticResource ButtonStyle}" Margin="5"/>
				<Button Content="Классика" Command="{Binding NavigateTo22Command}" Style="{StaticResource ButtonStyle}" Margin="5"/>
				<Button Content="Драма" Command="{Binding NavigateTo23Command}" Style="{StaticResource ButtonStyle}" Margin="5"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>